@model Model
@{
    ViewData["Title"] = "ModelDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int photoCount = 0;
}

<div class="jumbotron" style="background: aliceblue" ;>

    <div class="container mt-4">
        <h4>@Model.FirstName @Model.LastName</h4>
    </div>

</div>


<div class="container">
    <div class="row">

        <div class="col-md-6">

            <div class="card bg-light">
                <div class="card-header">
                    <span>Model Details</span>
                </div>
               
                <img src="/images/modelImage/@Model.ProfilePhotoPath" class="car-img w-50 mx-auto" />

                <div class="card-body">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>Name :</td>
                                <td>@Model.FirstName</td>
                            </tr>
                            <tr>
                                <td>LastName :</td>
                                <td>@Model.LastName</td>
                            </tr>

                            <tr>
                                <td>Shoe Number :</td>
                                <td>@Model.ShoeNumber</td>
                            </tr>
                            <tr>
                                <td>Body Size :</td>
                                <td>@Model.BodySize</td>
                            </tr>
                            <tr>
                                <td>Weight :</td>
                                <td>@Model.Weight</td>
                            </tr>
                            <tr>
                                <td>Height- cm :</td>
                                <td>@Model.Height</td>
                            </tr>

                            <tr>
                                <td>EyeColor :</td>
                                <td>@Model.EyeColor.ToString()</td>
                            </tr>
                            <tr>
                                <td>Hair Color :</td>
                                <td>@Model.HairColor</td>
                            </tr>
                            <tr>
                                <td>Has Friver Licence:</td>
                                <td>
                                    @if (Model.HasDriverLicence)
                                    {
                                        <label>Yes</label>
                                        <input type="checkbox" value="Yes" checked />
                                    }
                                    else
                                    {
                                        <label>No</label>

                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>Foreign Language :</td>
                                <td>@Model.ForeignLanguage.ToString()</td>
                            </tr>

                        </tbody>

                    </table>


                </div>

            </div>

        </div>

        <div class="col-md-6">

            <div class="card bg-dark text-light">
                <div class="card-header">
                    <h5>Model Gallery</h5>
                </div>
                <div class="card-body">
                    <div id="carouselModal" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner w-100">

                            @if (Model.PhotoGraphies.Count > 0)
                            {
                                @foreach (var photo in Model.PhotoGraphies)
                                {
                                    photoCount += 1;

                                    @if (photoCount == 1)
                                    {

                                        <div class="carousel-item active">
                                            <img class="d-block active" src="/images/modelImage/@photo.Path" alt="" style="height:450px;width:100%; object-fit:contain;">

                                        </div>

                                    }
                                    else
                                    {

                                        <div class="carousel-item">
                                            <img class="d-block " src="/images/modelImage/@photo.Path" alt="" style="height:450px;width:100%; object-fit:contain;">
                                        </div>

                                    }
                                }
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block active" src="/images/modelImage/@Model.ProfilePhotoPath" alt="" style="height:450px;width:100%; object-fit:contain;">
                                </div>
                            }


                        </div>

                        <a class="carousel-control-prev" href="#carouselModal" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselModal" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        
        </div>
    </div>
</div>
