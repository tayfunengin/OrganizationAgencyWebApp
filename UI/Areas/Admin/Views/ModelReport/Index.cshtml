@model IEnumerable<Model>
@{
    ViewData["Title"] = "Accounting Management";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header col-lg-9">
        <div class="row">
            <div class="col-lg-9">
                <span>Model List</span>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="col-lg-9">
            <table id="modelTable" class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Category</th>
                        <th>Gender</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.ID
                            </td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Category</td>
                            <td>@item.Gender</td>
                            <td>
                                <a asp-action="Reports" asp-controller="ModelReport" asp-route-id="@item.ID" class="btn btn-sm btn-primary">See Reports</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
     
    </div>
</div>


@section scripts{
    <script>

        $(document).ready(function () {
            $('#modelTable').DataTable();
        });

    </script>

}

