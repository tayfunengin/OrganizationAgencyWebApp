@model IEnumerable<Organization>
@{
    ViewData["Title"] = "Accounting Management";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header col-lg-9">
        <div class="row">
            <div class="col-md-12">
                <span>Organization List</span>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="col-lg-9">
            <table id="organizationTable" class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th></th>
                        <th>Organization Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Days</th>
                        <th>City</th>
                        <th>Budget</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var org in Model)
                    {
                        <tr>
                            <td>
                                @org.ID
                            </td>
                            <td>
                                @org.OrganizationName
                            </td>
                            <td>@org.StartDate.ToShortDateString()</td>
                            <td>@org.EndDate.ToShortDateString()</td>
                            <td>@org.NumberOfDays</td>
                            <td>@org.City</td>
                            <td>@org.Budget TL</td>
                            <td>@org.OrgStatus</td>
                            <td>
                                <a asp-action="Details" asp-controller="OrganizationReport" asp-route-id="@org.ID" class="btn btn-sm btn-primary">See Report</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>


@section scripts{
    <script>

        $(document).ready(function () {
            $('#organizationTable').DataTable();
        });

    </script>

}

