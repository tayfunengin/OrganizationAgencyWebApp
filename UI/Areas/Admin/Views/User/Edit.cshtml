@model UpdateVM
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <h5>Update User</h5>
            </div>
            <div class="col-md-6 text-right">
                <a asp-action="Index" asp-controller="User" class="btn btn-light">Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All">

        </div>
