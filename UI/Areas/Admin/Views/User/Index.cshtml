@model List<AppUser>
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header col-lg-9">
        <div class="row">
            <div class="col-md-9">
                <span>User List</span>
            </div>
            <div class="col-md-3 text-right">
                <a asp-action="Create" asp-controller="User" class="btn btn-outline-primary">Add User</a>
            </div>
        </div>
    </div>
    <div class="card-body ">
        <div class="col-lg-9">
            <table id="userTable" class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>
                                <a asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Update</a>
                                <a asp-action="Delete" asp-controller="User" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>          
       
    </div>

</div>


@section scripts{
    <script>

        $(document).ready(function () {
            $('#userTable').DataTable();
        });

    </script>

}
