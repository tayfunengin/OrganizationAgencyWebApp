@model Model
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Organizing/Views/Shared/_OrganizingLayout.cshtml";
}



<div class="card">

    <div class="card-header">
        <div class="row">
            <div class="col-md-9">
                <span>Update Model</span>
            </div>
            <div class="col-md-3 text-right">
                <a asp-action="Index" asp-controller="Model" class="btn btn-default btn-sm">Back To List</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Firstname</label>
                    <input type="text" asp-for="@Model.FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Lastname</label>
                    <input type="text" asp-for="@Model.LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" asp-for="@Model.Email" class="form-control" />
                </div>           
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" asp-for="@Model.Adres" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tel</label>
                    <input type="text" asp-for="@Model.Tel" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Gender</label>
                    <select class="form-control" asp-for="@Model.Gender">
                        @foreach (var item in TempData["gender"] as Array)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Birthdate</label>
                    <input type="date" asp-for="@Model.Birthdate" class="form-control" />
                </div>
                <div class="form-group">
                    <label>ShoeNumber</label>

                    <input type="text" asp-for="@Model.ShoeNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label>BodySize</label>
                    <input type="text" asp-for="@Model.BodySize" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Weight</label>
                    <input type="text" asp-for="@Model.Weight" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Height</label>
                    <input type="text" asp-for="@Model.Height" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Profile Photo</label>
                    <input type="file" name="formFile" />
                </div>


                <div class="form-group">
                    <label>Eye Color</label>
                    <select class="form-control" asp-for="@Model.EyeColor">
                        @foreach (var item in TempData["eyeColor"] as Array)
                        {
                            <option value="@item"> @item </option>
                        }


                    </select>

                </div>
                <div class="form-group">
                    <label>Hair Color</label>
                    <select class="form-control" asp-for="@Model.HairColor">
                        @foreach (var item in TempData["hairColor"] as Array)
                        {
                            <option value="@item">@item </option>
                        }


                    </select>

                </div>
                <div class="form-group">
                    <div class="row">                   

                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <label>Has driving licence?</label>
                                </div>
                                <div class="col">
                                    <div class="row">
                                        <div class="col">
                                            <label>Yes</label>
                                            <input type="radio" asp-for="HasDriverLicence" value="true" />
                                        </div>
                                        <div class="col">
                                            <label>No</label>
                                            <input type="radio" asp-for="HasDriverLicence" value="false" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Foreign Language</label>
                    <select class="form-control" asp-for="@Model.ForeignLanguage">
                        @foreach (var item in TempData["foreignLang"] as Array)
                        {
                            <option value="@item">@item </option>
                        }


                    </select>

                </div>
                <div class="form-group">
                    <label>Category</label>
                    <select class="form-control" asp-for="@Model.Category">
                        @foreach (var item in TempData["modelCategory"] as Array)
                        {
                            <option value="@item">@item </option>
                        }


                    </select>

                </div>
                <div class="form-group">
                    <label>Note</label>
                    <input type="text" asp-for="@Model.Note" class="form-control" />
                </div>


                <button type="submit" class="btn btn-success">Update</button>
            </form>

        </div>
    </div>
</div>

@section scripts{

    <script>
        $(function () {

            $.ajax({
                type: "Get",
                url: "/dashboard/json/cities.json",
                contentType: "application/json; charset=UTF-8",
                dataType: "Json",
                success: function (data) {
                    $.each(data, function (value, index) {
                        $("#inputState").append("<option value='" + index.name + "'>" + index.name + "</option>")
                    });
                }
            });
        });


    </script>



}