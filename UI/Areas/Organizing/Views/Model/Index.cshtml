@model IEnumerable<Model>
@{
    ViewData["Title"] = "Model Management";
    Layout = "~/Areas/Organizing/Views/Shared/_OrganizingLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-lg-9">
                <span>Model List</span>
            </div>
            <div class="col-md-3 text-right">
                <a asp-action="Create" class="btn btn-outline-primary">Add Model</a>
            </div>
        </div>

    </div>
    <div class="card-body">
        <table id="modelTable" class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th></th>
                    <th>#</th>
                    <th>Name</th>
                    <th>Surname</th>                 
                    <th>Eye Color</th>
                    <th>Hair Color</th>
                    <th>Height</th>
                    <th>Weight</th>
                    <th>Body Size</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img src="~/images/modelImage/@item.ProfilePhotoPath" alt="@item.FirstName" class="card-img" />

                    </td>
                    <td>
                        @item.ID
                    </td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>                
                    <td>@item.EyeColor</td>
                    <td>@item.HairColor</td>
                    <td>@item.Height</td>
                    <td>@item.Weight</td>
                    <td>@item.BodySize</td>
                    <td>@item.Category</td>

                    <td class="col-2">
                        <div class="row">
                            <a asp-action="Edit" asp-controller="Model" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Update</a>|
                            <a asp-action="Delete" asp-controller="Model" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Delete</a>|
                            <a asp-action="Details" asp-controller="Model" asp-route-id="@item.ID" class="btn btn-sm btn-success">Details</a>
                        </div>                   
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section scripts{
    <script>

        $(document).ready(function () {
            $('#modelTable').DataTable();
        });

    </script>

}

