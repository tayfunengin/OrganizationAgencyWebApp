@model PhotoGraphy 
@{
    ViewData["Title"] = "AddPhoto";
    Layout = "~/Areas/Organizing/Views/Shared/_OrganizingLayout.cshtml";
    Model modelEntity = TempData["modelForPhoto"] as Model;
}

<div class="row" style=" margin-top:75px;">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-6">
                        <h3>Add Photography</h3>
                    </div>
                    <div class="col-6 text-right">
                        <a asp-action="Details" asp-route-id="@modelEntity.ID" class="btn btn-default">Back to Details</a>
                    </div>
                </div>           

            </div>
            <div class="card-body">

                <form asp-action="AddPhoto" asp-controller="Model" method="post" enctype="multipart/form-data" asp-route-id="@modelEntity.ID">
                                       
                    <div class="form-group">
                        <label>Title:</label>
                        <input asp-for="Title" type="text" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Photo</label>
                        <input type="file" name="formFile" />
                    </div>
                    <div class="text-right">
                    
                        <button type="submit" class="btn btn-primary ">Add</button>
                    </div>
               
                </form>

            </div>
        </div>
    </div>
</div>


