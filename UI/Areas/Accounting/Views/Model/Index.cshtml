@model IEnumerable<Model>
@{
    ViewData["Title"] = "Accounting Management";
    Layout = "~/Areas/Accounting/Views/Shared/AccountingLayout.cshtml";
}


<div class="card">
<div class="card-header">
    <div class="row">
        <div class="col-md-12">
            <span>Model List</span>
        </div>
    </div>

</div>
<div class="card-body">
    <table id="modelTable" class="table table-striped table-responsive">
        <thead>
            <tr>
             
                <th>#</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Category</th>
                <th>Gender</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ID
                    </td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>                
                    <td>@item.Category</td>
                    <td>@item.Gender</td>
                    <td>                        
                           <a asp-action="Details" asp-controller="Model" asp-route-id="@item.ID" class="btn btn-sm btn-success">Details</a>|
                           <a asp-action="Reports" asp-controller="Model" asp-route-id="@item.ID" class="btn btn-sm btn-primary">See Reports</a>     
                      
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>


@section scripts{
    <script>

        $(document).ready(function () {
            $('#modelTable').DataTable();
        });

    </script>

}

